import random

# Predefined list of words
word_list = ["apple", "train", "house", "mouse", "plant"]

# Randomly select a word
secret_word = random.choice(word_list)
guessed_letters = []  # List to keep track of guessed letters
attempts_left = 6

# Create a display version of the word with underscores
display_word = ["_"] * len(secret_word)

print("🎮 Welcome to Hangman!")
print("Guess the word. You have 6 incorrect guesses allowed.")

# Main game loop
while attempts_left > 0 and "_" in display_word:
    print("\nWord: " + " ".join(display_word))
    print("Guessed letters:", " ".join(guessed_letters))
    guess = input("Enter a letter: ").lower()

    # Input validation
    if len(guess) != 1 or not guess.isalpha():
        print("❗ Please enter a single alphabet letter.")
        continue
    if guess in guessed_letters:
        print("⚠️ You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in secret_word:
        print("✅ Good guess!")
        # Update the display word with the correct letter
        for i in range(len(secret_word)):
            if secret_word[i] == guess:
                display_word[i] = guess
    else:
        attempts_left -= 1
        print(f"❌ Incorrect! You have {attempts_left} tries left.")

# End of game
if "_" not in display_word:
    print("\n🎉 Congratulations! You guessed the word:", secret_word)
else:
    print("\n💀 Game over! The word was:", secret_word)
